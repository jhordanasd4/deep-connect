// Prisma schema for DeepBlue API
// Database: Postgres (Neon)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id            String    @id @default(cuid())
  code          String?   @unique
  nombre        String
  apellido      String?
  username      String    @unique
  email         String    @unique
  password      String
  rol           String    @default("player")
  nivel         Int       @default(1)
  gotasAgua     Decimal   @db.Decimal(18, 2) @default(0)
  perlas        Decimal   @db.Decimal(18, 2) @default(0)
  ultimoAcceso  DateTime  @default(now())
  arrecifeItems Json?
  sessionToken  String?
  referredById  String?

  recharges     Recharge[]
  withdrawals   Withdrawal[]
  fondos        Fondo[]
  referrals     Referral[] @relation("referrals_made")

  @@index([username])
  @@index([email])
}

model Recharge {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  item       String?
  network    String?
  address    String?
  amount     Decimal  @db.Decimal(18, 2) @default(0)
  note       String?  @db.Text
  fileName   String?
  status     String   @default("pending")
  createdAt  DateTime @default(now())

  @@index([userId], map: "idx_recharge_user")
}

model Withdrawal {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  network    String
  address    String
  amount     Decimal  @db.Decimal(18, 2)
  note       String?  @db.Text
  status     String   @default("pending")
  createdAt  DateTime @default(now())

  @@index([userId], map: "idx_withdrawal_user")
}

model Fondo {
  id            String   @id @default(cuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id])
  amount        Decimal  @db.Decimal(18, 2)
  dailyRate     Decimal  @db.Decimal(5, 2)
  days          Int
  startDate     DateTime
  endDate       DateTime
  expectedTotal Decimal  @db.Decimal(18, 2)

  @@index([userId], map: "idx_fondo_user")
}

model Referral {
  id         String   @id @default(cuid())
  referrerId String
  referrer   User     @relation("referrals_made", fields: [referrerId], references: [id])
  userId     String
  username   String
  earned     Decimal  @db.Decimal(18, 2) @default(0)
  date       DateTime @default(now())

  @@index([referrerId], map: "idx_referral_referrer")
  @@index([userId], map: "idx_referral_user")
}
